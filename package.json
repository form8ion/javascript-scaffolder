{
  "name": "@travi/javascript-scaffolder",
  "version": "0.0.0-semantically-released",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "description": "opinionated scaffolder for JavaScript projects",
  "license": "MIT",
  "repository": "travi/javascript-scaffolder",
  "bugs": "https://github.com/travi/javascript-scaffolder/issues",
  "homepage": "https://npm.im/@travi/javascript-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "clean": "rimraf lib/",
    "lint:js": "eslint . --cache",
    "lint:travis": "travis-lint .travis.yml",
    "lint:sensitive": "ban",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:unit": "nyc run-s test:unit:base",
    "test:unit:base": "mocha --recursive test/unit",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "generate:readme": "doctoc README.md --entryprefix '*'",
    "build:js": "rollup -c",
    "build": "run-s clean build:*",
    "watch": "run-s 'build:js -- --watch'",
    "prepublishOnly": "run-s build"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@travi/any": "1.8.2",
    "@travi/eslint-config-travi": "1.6.18",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "6.26.0",
    "ban-sensitive-files": "^1.9.2",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "codecov": "3.1.0",
    "commitlint-config-travi": "1.2.30",
    "cz-conventional-changelog": "2.1.0",
    "doctoc": "1.3.1",
    "husky": "^1.0.0-rc.13",
    "mocha": "5.2.0",
    "npm-run-all": "4.1.3",
    "nyc": "^13.0.1",
    "rollup": "0.66.1",
    "sinon": "^6.1.5",
    "travis-lint": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "hoek": "^5.0.4",
    "inquirer": "6.2.0",
    "joi": "^13.6.0",
    "lodash.uniq": "4.5.0",
    "make-dir": "1.3.0",
    "mz": "2.7.0",
    "npm-conf": "1.1.3",
    "shelljs": "^0.8.2"
  }
}
